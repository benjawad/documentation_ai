# --- Django Settings ---
DEBUG=1
SECRET_KEY=change-me-to-a-random-50-character-string
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# --- Database ---
DATABASE_URL=postgres://postgres:password@db:5432/ai_analyst
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=ai_analyst

# --- Redis ---
REDIS_PASSWORD=change-me-in-production

# --- Celery ---
CELERY_BROKER_URL=redis://:change-me-in-production@redis:6379/0

# --- AI Services ---
OPENAI_API_KEY=sk-placeholder

# --- LangSmith Tracking (Optional) ---
# Get your API key from: https://smith.langchain.com/settings
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=code-analysis-mcp
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# --- Chatbot Configuration ---
# Vector store: postgres or redis
DEFAULT_VECTOR_STORE=postgres

# LLM Settings
DEFAULT_LLM_MODEL=gpt-5.1
DEFAULT_CHAT_MODEL=gpt-5.1
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

